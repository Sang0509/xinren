<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.springboot.dao.UserDao">
    <insert id="insert">
        INSERT INTO `user`(email, password) values(#{email}, #{password});
    </insert>

    <update id="update">
        update `user` set email = #{email}, password = #{password} where id = #{id};
    </update>

    <delete id="deletById">
        DELETE from `user` where id = #{id};
    </delete>

    <select id="findAll" resultType="com.example.springboot.entity.User">
        SELECT * FROM user
    </select>

    <select id="getById" resultType="com.example.springboot.entity.User">
        SELECT * FROM user where id = #{id}
    </select>

    <select id="getByUser" resultType="com.example.springboot.entity.User">
        select email,password from user where email = #{email} and password=#{password}
    </select>

</mapper>